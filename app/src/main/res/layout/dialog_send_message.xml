<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:background="@drawable/forgot_password_background"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_forgot_password_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="@string/enter_your_message"
        android:textColor="@color/colorBlack"
        android:textSize="12sp" />


    <EditText
        android:id="@+id/et_user_message"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/form_input_border"
        android:gravity="right"
        android:hint="@string/enter_your_message"
        android:paddingRight="5dp"
        android:paddingTop="5dp"
        android:textColor="@color/colorBlack"
        android:textSize="12sp" />


    <Button
        android:id="@+id/btn_send"
        android:layout_width="150dp"
        android:layout_height="35dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/login_button_blue_background"
        android:gravity="center"
        android:text="@string/send"
        android:textColor="@color/colorWhite"
        android:textSize="14sp"
        android:textStyle="bold" />


</LinearLayout>