<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <RelativeLayout
        android:id="@+id/layout_other_user"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <TextView
            android:id="@+id/tv_other_user_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/other_user_background"
            android:gravity="center_vertical"
            android:maxWidth="230dp"
            android:minHeight="30dp"
            android:minWidth="100dp"
            android:paddingBottom="3dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="3dp"
            android:text="@string/message_test"
            android:textColor="@color/colorLessBlack"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/tv_time_other"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right|center_vertical"
            android:maxLines="1"
            android:text="@string/time"
            android:textColor="@color/colorAdsTime"
            android:textSize="8sp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/tv_other_user_message"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout_my_message"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <TextView
            android:id="@+id/tv_my_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/my_message_background"
            android:gravity="center_vertical"
            android:maxWidth="230dp"
            android:minHeight="30dp"
            android:minWidth="100dp"
            android:paddingBottom="3dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="3dp"
            android:text="@string/message_test"
            android:textColor="@color/colorWhite"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right|center_vertical"
            android:maxLines="1"
            android:text="@string/time"
            android:textColor="@color/colorAdsTime"
            android:textSize="8sp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="10dp"
            android:layout_toLeftOf="@id/tv_my_message"/>

    </RelativeLayout>

</LinearLayout>