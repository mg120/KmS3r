<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:background="@drawable/forgot_password_background"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_forgot_password_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="@string/enter_your_mail"
        android:textColor="@color/colorBlack"
        android:textSize="12sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/form_input_border">

        <ImageView
            android:id="@+id/email_icon"
            android:layout_width="40dp"
            android:layout_height="35dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/login_icon_background"
            android:padding="5dp"
            android:src="@mipmap/login_email_icon" />

        <EditText
            android:id="@+id/et_user_email"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="1dp"
            android:layout_toLeftOf="@+id/email_icon"
            android:background="@android:color/transparent"
            android:gravity="right|center_vertical"
            android:hint="@string/user_email"
            android:inputType="textEmailAddress"
            android:paddingRight="5dp"
            android:textColor="@color/colorBlack"
            android:textSize="12sp" />
    </RelativeLayout>


    <Button
        android:id="@+id/btn_send_password"
        android:layout_width="150dp"
        android:layout_height="35dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/login_button_blue_background"
        android:gravity="center"
        android:text="تغيير"
        android:textColor="@color/colorWhite"
        android:textSize="14sp"
        android:textStyle="bold" />


</LinearLayout>